
https://hqt.ro/how-to-install-mariadb-server-phpmyadmin-on-entware


opkg install mariadb-server mariadb-server-extra mariadb-client mariadb-client-extra
opkg install php7-mod-mysqli php7-mod-mbstring php7-mod-json php7-mod-session php7-mod-ctype

mysql_install_db --force

mysqld_safe --skip-grant-tables &

mysql -u root -p



FLUSH PRIVILEGES;
ALTER USER 'root'@'localhost' IDENTIFIED BY '패스워드';

FLUSH PRIVILEGES;

/opt/etc/init.d/S70mysqld start

/opt/etc/mysql/conf.d/50-server.cnf
bind adress 0.0.0.0

vi  /jffs/scripts/firewall-start



> grant all privileges on *.* to 'root'@'%' identified by '비밀번호';

> flush privileges;
